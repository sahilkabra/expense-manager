{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "forceConsistentCasingInFileNames": true,
        "lib": ["es6", "es2015"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "outDir": "./dist",
        "paths": {
        },
        "skipLibCheck": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es6"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
